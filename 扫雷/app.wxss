/**app.wxss**/
page{
  background-color: #e6e6e6;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.title{
  color: red;
  text-align: center;
  font-size: 20px;
  margin-bottom: 15px;
}
.button-board {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 10rpx;
}
.btnRow{
  display: flex;
  flex-direction: column;
}
.button-cell {
  flex: 1;
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 1rpx 1rpx 1rpx #AAAAAA;
  background-color: #DDDDDD;
}
